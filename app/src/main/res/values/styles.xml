<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
    </style>

    <style name="content_text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
    </style>

    <style name="green_label_text"
           parent="label_text">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="green_content_text"
           parent="content_text">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="blue_label_text"
           parent="label_text">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="blue_content_text"
           parent="content_text">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

</resources>
